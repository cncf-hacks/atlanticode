root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.yml]
indent_style = space
indent_size = 2

[*.rs]
indent_style = space
indent_size = 4

[*.toml]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[Makefile*]
indent_style = tab
tab_width = 4

[*.sh]
indent_style = tab
indent_size = 4

[*.s]
indent_style = tab
indent_size = 4
